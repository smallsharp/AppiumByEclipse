<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="PlaySuite" preserve-order="true" >
    <!--
    1、suite名称、test名称可以随便写
    2、class name需写全路径
    3、methods 写方法名称即可,代码中填写@test，但是这里不添加的话，仍然不会执行
    4、执行需要run testNG.xml
    -->
    
    <test name="login" preserver-order="true" >

        <classes>
            <!-- 登录 -->
            <class name="top.cases.Login_Test"> 
                <parameter name="mobile" value="18521035133"></parameter>
                <parameter name="pwd" value="222222"></parameter>
                <methods>
                    <include name="testLogin"></include>
                </methods>
             </class>
        </classes>
        
    </test>
    
        <!-- 监听器配置 -->
    <listeners>
            <!-- 监听用例的执行动作,这里添加监听,相关的方法会执行两次，不知道是不是testng的bug,所以把监听放到类中了 -->
        <!--  <listener class-name="top.base.listener.TestNGListener" /> -->
        
            <!-- 生成reporterNg 测试报告，需要添加的监听,
            	或者在Eclipse-Window-Preference-testNg-Pre Defined Listeners 添加"org.uncommons.reportng.HTMLReporter" 
            -->
         <listener class-name="org.uncommons.reportng.HTMLReporter" />
            <!-- 这个不需要 -->
	<!-- 	<listener class-name="org.uncommons.reportng.JUnitXMLReporter" /> -->
    </listeners>

</suite>